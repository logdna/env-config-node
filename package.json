{
  "name": "@logdna/env-config",
  "version": "2.0.0",
  "description": "Configuration package for reading environment variables",
  "main": "index.js",
  "files": [
    "bin/**/*",
    "lib/**/*",
    "index.js",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "tap",
    "lint": "eslint ./",
    "pretest": "npm run lint",
    "release": "semantic-release"
  },
  "bin": {
    "config-doc": "./bin/cmd.js"
  },
  "keywords": [
    "env",
    "env var",
    "environemnt",
    "config",
    "validate",
    "validator",
    "validation",
    "parser"
  ],
  "bugs": {
    "url": "https://github.com/logdna/env-config-node/issues"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "main"
    ],
    "extends": "semantic-release-config-logdna"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/logdna/env-config-node.git"
  },
  "homepage": "https://github.com/logdna/env-config-node",
  "author": {
    "name": "LogDNA, Inc.",
    "email": "help@logdna.com"
  },
  "contributors": [
    {
      "name": "Darin Spivey",
      "email": "darin.spivey@logdna.com"
    },
    {
      "name": "Evan Lucas",
      "email": "evanlucas@me.com"
    },
    {
      "name": "Jacob Hull",
      "email": "jacob@planethull.com"
    }
  ],
  "license": "SEE LICENSE IN LICENSE",
  "eslintConfig": {
    "root": true,
    "ignorePatterns": [
      "node_modules/",
      "coverage/"
    ],
    "extends": [
      "logdna"
    ],
    "parserOptions": {
      "ecmaVersion": 2019
    },
    "rules": {
      "no-shadow": 0,
      "no-magic-numbers": 0,
      "no-new": 0
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "eslint": "^7.10.0",
    "eslint-config-logdna": "^6.1.0",
    "husky": "^4.3.0",
    "semantic-release": "^17.3.8",
    "semantic-release-config-logdna": "^1.1.0",
    "tap": "^16.2.0"
  },
  "tap": {
    "100": true,
    "ts": false,
    "jsx": false,
    "check-coverage": true,
    "coverage-report": [
      "text",
      "text-summary",
      "json",
      "html",
      "json-summary"
    ],
    "reporter": "classic",
    "nyc-arg": [
      "--exclude=test/",
      "--exclude=tools",
      "--all"
    ],
    "files": [
      "test/*.js"
    ],
    "output-file": ".tap-output"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "prepare-commit-msg": "tools/git-commit-template.js"
    }
  },
  "commitlint": {
    "rules": {
      "body-leading-blank": [
        2,
        "always"
      ],
      "body-max-line-length": [
        2,
        "always",
        72
      ],
      "body-min-length": [
        2,
        "always",
        20
      ],
      "subject-max-length": [
        2,
        "always",
        72
      ],
      "scope-empty": [
        2,
        "always"
      ],
      "subject-full-stop": [
        2,
        "never",
        "."
      ],
      "type-enum": [
        2,
        "always",
        [
          "feat",
          "deps",
          "fix",
          "docs",
          "package",
          "style",
          "refactor",
          "test",
          "revert",
          "WIP"
        ]
      ],
      "type-empty": [
        2,
        "never"
      ]
    }
  }
}
